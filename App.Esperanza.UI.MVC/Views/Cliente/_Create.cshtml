@model App.Esperanza.Models.Cliente


@using (Ajax.BeginForm("Create", new { Controller = "Cliente" },
    new AjaxOptions
    {
        HttpMethod = "POST",
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "modal-body",
        OnSuccess = "cliente.success(data, 'create');"
    },
    htmlAttributes: new { id = "createForm" }
