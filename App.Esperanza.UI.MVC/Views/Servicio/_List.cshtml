@model IEnumerable<App.Esperanza.Models.Servicio>

<div id="ServicioTableContainer" @*class="table-responsive"*@>
    <br />
    <table id="ServicioTable" class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estado)
                </th>
                <th></th>
            </tr>
        </thead>

        <tfoot>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estado)
                </th>
                <th></th>
            </tr>
        </tfoot>

        

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td>
                    <a href="#" class="btn btn-warning"
                       onclick="appEsperanza.getModal('@Url.Action("Edit", new { id = item.Id })');"
                       data-toggle="modal" data-target="#modal-container">
                        <span class="fa fa-edit">&nbsp;&nbsp;Editar</span>
                    </a>

                    <a href="#" class="btn btn-primary"
                       onclick="appEsperanza.getModal('@Url.Action("Details", new { id = item.Id })');"
                       data-toggle="modal" data-target="#modal-container">
                        <span class="fa fa-search">&nbsp;&nbsp;Ver</span>
                    </a>

                    <a href="#" class="btn btn-danger"
                       onclick="appEsperanza.getModal('@Url.Action("Delete", new { id = item.Id })');"
                       data-toggle="modal" data-target="#modal-container">
                        <span class="fa fa-trash">&nbsp;&nbsp;Inactivar</span>
                    </a>
                </td>
            </tr>
        }

    </table>
</div>