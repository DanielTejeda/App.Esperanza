@model IEnumerable<App.Esperanza.Models.Venta>

<div id="VentaPendTableContainer" @*class="table-responsive"*@>
    <br />
    <table id="ventaPendTable" class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.IdServicio)
